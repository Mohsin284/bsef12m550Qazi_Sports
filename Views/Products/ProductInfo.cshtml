@using MVC.Models
@model MVC.Models.Item

@{
    ViewBag.Title = ViewBag.ProInfo;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Model.Name</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <h2>Product Info</h2>
    <form method="post" action="~/Home/AddToCart/@Model.Id">
        <table>
            <tr>


                <td><img src="~/images/img_@(Model.Type)_(@Model.Id).jpg" alt="Image" style="height: 350px; width: 400px; margin-left: 300px;margin-top: 30px;">
<td>
                <td>
                    <div style="margin-left: 50px; margin-top: 80px;font-family: 'Bodoni MT'; font-size: 20px; font-style: italic;">
                        <p> Name: @Model.Name</p>
                        <p style="font-family: 'Bodoni MT'; font-size: 20px; font-style: italic;"> Description: @Model.Description_ </p>
                        <p style="font-family: 'Bodoni MT'; font-size: 20px; font-style: italic;"> Colour: @Model.Color </p>
                        <p style="font-family: 'Bodoni MT'; font-size: 20px; font-style: italic;"> Price: @Model.Price </p>
                        <p style="font-family: 'Bodoni MT'; font-size: 20px; font-style: italic;">

                            <label> Select Size: </label>
                            <select id="size" name="size">
                                <option>@Model.Size </option>
                                <option> Medium</option>
                                <option> Small </option>
                                <option> Extra Large </option>
                            </select>
                        </p>
                        
                        <div class="mybutton" style="margin-left: 80px;margin-top: 30px">
                            <input type="submit" value="Add To Cart" class="button" />
                        </div>
                       @* <input id="productID" name="productID" type="hidden" value="38" />
                        <input id="Productname" name="Productname" type="hidden" value="Shalwar kameaz" />
                        <input id="price" name="price" type="hidden" value="5000" />*@
                    </div>
                </td>
                <td></td>
            </tr>

        </table>

    </form>

</body>
</html>