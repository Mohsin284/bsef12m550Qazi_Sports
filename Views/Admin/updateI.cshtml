
@using MVC.Models
@model  MVC.Models.Item
@{
    ViewBag.Title = "updateI";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title></title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>
    &nbsp;
    <div style="margin-left: 100px ; color:blueviolet">
        @using (Html.BeginForm("UpdateItem", "Admin", FormMethod.Post))
        {

            @Html.HiddenFor(m => Model.Id)
            <br><br>
            <p style="color:black">Name</p>
            @Html.EditorFor(m => Model.Name)
            <br><br>
            <p style="color:black">Description</p>
            @Html.EditorFor(m => Model.Description_)
            <br><br>
            <p style="color:black">Color</p>
            @Html.EditorFor(m => Model.Color)
            <br><br>
            <p style="color:black">Price</p>
            @Html.EditorFor(m => Model.Price)
            <br><br>
            <p style="color:black">Size</p>
            @Html.EditorFor(m => Model.Size)
            <br><br>
            <p style="color:black">Type</p>
            @Html.EditorFor(m => Model.Type)
            <br><br>
            <p style="color:black">Status</p>
            @Html.EditorFor(m => Model.Status)
            <br><br>
            <input type="submit" value="Submit" />
        }
    </div>
</body>
</html>

