<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script> 
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">

        <nav class="navbar navbar-inverse" style="background-color:mediumpurple" role="navigation">
            <div class="navbar-brand">
                <a class="navbar-text" href="#"> </a>
                
                <img src="~/Controllers/images/crick_logo%20(1).jpg"  alt="Qazi Sport" style="width:100px; height:50px">
                
            </div>
           
            <h4 style="color:bisque">Qazi Sports</h4>
            <ul  class="nav navbar-nav pull-left list-inline > li">

                <li><a style="color:gold" href="~/Home/Index">Home</a></li>
                <li><a style="color:gold" href="~/Products/Products/1">Products</a></li>
                <li><a style="color:gold" href="~/User/SignUp">Register</a></li>
                <li><a style="color:gold" href="~/User/SignIn">Sign in</a></li>
                <li><a style="color:gold" href="~/Home/Contact">Contact</a></li>

                <li><a style="color:gold" href="~/Home/Cart">Cart</a></li>

            </ul>
            <form class="navbar-form navbar-left center-block" role="search">
               <div class="form-group">
                   <input type="text" class="form-control" placeholder="Search" />
                   <a style="color:blue" href="~/Home/Search"> <button type="submit" class="btn btn-primary" >Search</button> </a>
               </div>
             </form>
                
           
        </nav>



        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        </div>
</body>
</html>
